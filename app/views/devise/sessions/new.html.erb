<link class="cssdeck" rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.3.1/css/bootstrap.min.css">





<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <div id="login-overlay" class="modal-dialog">
      <div class="modal-content" style="width:40%; display: inline-block; margin-right: 2%; margin-left:2%; margin-top:6%;">

          <div class="modal-body">
              <div class="row">
                  <div class="col-xs-6">
                      <div class="well">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div id="myTabContent" class="tab-content">
				<div class="tab-pane active in" id="login">
					<form class="form-horizontal" action='' method="POST">
						<fieldset>
							<div id="legend">
								<legend class="">Login</legend>
							</div>
              <div class="field" style="color:black;">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true %>
              </div>
</br>
              <div class="field" style="color:black;">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>


                      <% if devise_mapping.rememberable? -%>
                        <div class="field" style="color:black;">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>

</br>
							<div class="control-group">
								<!-- Button -->

                        <div class="actions">
                          <%= f.submit "Log in" %>
                        </div>

							</div>
						</fieldset>
					</form>
          <%= render "devise/shared/links" %>
          <% end %>


      </div>
    </div>
  </div>
  </div>
</div>
</div>
</div>
<div class="modal-content" style="width: 50%; display: inline-block; margin-bottom: 70%;">

  <div>
                      <p class="lead">Register now for <span class="text-success">FREE</span></p>
                      <ul class="list-unstyled" style="line-height: 2">
                          <li><span class="fa fa-check text-success"></span> See all your orders</li>
                          <li><span class="fa fa-check text-success"></span> Fast re-order</li>
                          <li><span class="fa fa-check text-success"></span> Save your favorites</li>
                          <li><span class="fa fa-check text-success"></span> Fast checkout</li>
                          <li><span class="fa fa-check text-success"></span> Get a gift <small>(only new customers)</small></li>
                          <li><a href="/read-more/"><u>Read more</u></a></li>
                      </ul>
                      <p><a href="/new-customer/" class="btn btn-info btn-block">Yes please, register now!</a></p>
                  </div>
              </div>
          </div>


<% end %>
