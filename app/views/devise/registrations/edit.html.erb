<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />

    <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <![endif]-->
    <!-- BOOTSTRAP STYLE SHEET -->


     <!-- CUSTOM STYLE CSS -->

</head>
<body >

    <!-- NAVBAR CODE END -->
    <div class="container">
        <section style="padding-bottom: 50px; padding-top: 50px; width:40%; float:left;">
            <div class="row">
                <div class="col-md-4">

                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= devise_error_messages! %>

                  <%= image_tag @user.image.url, :class =>"img-rounded img-responsive",size: "250x250" %>
                  <%= f.file_field :image %>
                    <br />
                      <br>
                    <label><%= f.label :first_name %></label>
                    <%= f.text_field :first_name, autofocus: true, class: "form-control", placeholder: resource.first_name%>
                    <label><%= f.label :last_name %></label>
                      <%= f.text_field :last_name, autofocus: true, class: "form-control", placeholder: resource.last_name%>
                    <label> <%= f.label :email %></label>
                      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: resource.email%>
                      <label> <%= f.label :city %></label>
                        <%= f.text_field :city, autofocus: true, class: "form-control", placeholder: resource.city%>
                        <label> <%= f.label :state %></label>
                          <%= f.text_field :state, autofocus: true, class: "form-control", placeholder: resource.state%>
                          <label> <%= f.label :country %></label>
                            <%= f.country_select :country, autofocus: true, class: "form-control", placeholder: resource.country%>
                    <br /><br/>
                </div>
                  </div>
                  </section>
                <div class="col-md-8">
                    <div class="alert alert-info" style="margin-bottom: 5%; margin-top: 12%;  width: 50%; float:right;">

                        <h2>My Profile </h2>
                        <h5>Bootstrap user profile template </h5>
                        <p>

                        </p>


                    </div>
                  </div>

      <br>
      <br>
                    <div class="form-group col-md-8" style="margin-right: 4.5%; margin-bottom: 5%;  width: 50%; float:right;">



                        <h3>Change Your Password</h3>


                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                        <% end %>
                        <label><%= f.label :current_password %> <i>(needed to confirm your changes)</i></label>
                        <%= f.password_field :current_password, autocomplete: "off", class:"form-control" %>
                        <label><%= f.label :password %> <i>(leave blank if you don't want to change it)</i></label>
                        <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
                        <label>  <%= f.label :password_confirmation %></label>
                        <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control"  %>
                      <br ><br>
                      <br ><br>


                <%= link_to "Back", root_path,class:"btn btn-warning"  %>
                <%= f.submit "Update", class:"btn btn-success" %>
                <% end %>
              </br ><br>

                <h3>Cancel my account</h3>
                <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-warning" %>
              </div>

            </div>
            <!-- ROW END -->



        <!-- SECTION END -->
    </div>
    <!-- CONATINER END -->

    <!-- REQUIRED SCRIPTS FILES -->
    <!-- CORE JQUERY FILE -->
    <script src="assets/js/jquery-1.11.1.js"></script>
    <!-- REQUIRED BOOTSTRAP SCRIPTS -->
    <script src="assets/js/bootstrap.js"></script>
</body>

</html>
