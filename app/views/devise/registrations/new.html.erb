


<title>Cevente - Sign Up</title>


<header>

</header>

    <div id="login-overlay" style="  background-color: #645862;">
      <div style="display:inline-block; margin-right: 32%; margin-left:32%; width:36%; margin-top:8%; margin-bottom:8%;">


                      <div class="well">



<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html =>{:multipart => true }) do |f| %>
  <%= devise_error_messages! %>
  <br>
  <div class="form-group">
<form class="form-horizontal">
  <fieldset>

<table>
<tr>
    <div class="field" style="color:black;">
<td>      <%= f.label :first_name %> <br></td>
<td>      <%= f.text_field :first_name, autofocus: true, :style => 'width:100%;' %> </td>
    </div>
</tr>
<tr>
    <div class="field" style="color:black;">
<td>     <br>   <%= f.label :last_name %>  </td>
<td>   <br>     <%= f.text_field :last_name, autofocus: true, :style => 'width:100%;' %> </td>
    </div>
</tr>
<tr>
    <div class="field" style="color:black;">
<td>   <br>     <%= f.label :dob, 'Date of Birth' %> </td>
<td>   <br>     <%= f.date_field :dob, autofocus: true, :style => 'width:100%;' %> </td>
    </div>
</tr>
<tr>
    <div class="field" style="color:black;">
<td>  <br>      <%= f.label :city %> </td>
<td>  <br>      <%= f.text_field :city, autofocus: true , :style => 'width:100%;' %> </td>
    </div>
</tr>
<tr>
    <div class="field" style="color:black;">
<td>   <br>     <%= f.label :state %> </td>
<td>    <br>    <%= f.text_field :state, autofocus: true, :style => 'width:100%;' %></td>
    </div>
</tr>
<tr>
    <div class="field" style="color:black;">
<td>  <br>      <%= f.label :country %> </td>
<td>  <br>      <%= f.country_select :country %></td>
    </div>
</tr>
<tr>
  <div class="field" style="color:black;">
<td>  <br>  <%= f.label :email %> </td>
<td>  <br>  <%= f.email_field :email, autofocus: true, :style => 'width:100%;' %></td>
  </div>
</tr>

  <tr>
  <div class="field" style="color:black;">
<td>  <br>  <%= f.label :password %> </td>
<td> <br>   <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" , :style => 'width:100%;' %></td>
  </div>
</tr>
<tr>
  <div class="field" style="color:black;">
<td> <br>   <%= f.label :password_confirmation %> </td>
<td> <br>   <%= f.password_field :password_confirmation, autocomplete: "off",  :style => 'width:100%;' %> </td>
  </div>
</tr>

<tr>
  <div class="field" style="color:black;">
<td><br>    <%= f.label :image, 'Profile Picture' %> </td>
<td>  <br>  <%= f.file_field :image %><br /> </td>
  </div>
</tr>
<tr>
  <div class="field" style="color:black;">
<td><br>    <%= f.label :type %> </td>
<td>  <br>   <%= f.select(:type, User::TYPE) %> </td>
  </div>
</tr>
  <%= f.hidden_field :student, :value => true %>


</table>
<br><br>
  <div class="actions" style="color:black;">
    <%= f.submit "Sign up", class:"btn btn-success", :style => 'margin-right:40%; margin-left:40%;' %>
  </div>


</fieldset>
</form>

<% end %>



</div>
</div>
</div>
</div>
