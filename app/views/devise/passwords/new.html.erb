<title>Cevente - Forgot your password?<</title>


<header>
  <%= render "devise/navbar" %>

</header>

    <div id="login-overlay" class="modal-dialog" style="  background-color: #645862;">
      <div class="modal-content" style="display: inline-block; margin-right: 32%; margin-left:32%; width:36%; margin-top:8%; margin-bottom:8%;">

          <div class="body">
              <div class="row">
                  <div class="col-xs-6">
                      <div class="well">




  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%=    devise_error_messages! %>
  <div id="myTabContent" class="tab-content">
<form class="form-horizontal">
  <fieldset>

    <div class="field">
      <%= f.label :"Enter your email" %></br>
      <%= f.email_field :email, autofocus: true %>
    </div>
</br>
    <div class="actions">
      <%= f.submit "Send me reset password instructions" %>
    </div>
</br>

</fieldset>
</form>

<% end %>

<%= render "devise/shared/links" %>


      </div>
    </div>
  </div>
  </div>
